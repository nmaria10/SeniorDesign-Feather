    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/PCMDurationSeekbar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="48dp"
        rsb:dsb_indicatorColor="#69BE28"
        rsb:dsb_progressColor="#69BE28"
        rsb:dsb_rippleColor="#69BE28"
        rsb:dsb_thumbSize="24dp"
        rsb:dsb_trackHeight="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PCMPulseWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Pulse Width"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/PCMPulseWidthDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:text="100  Î¼s"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
             />

    </LinearLayout>

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/PCMPulseWidthSeekbar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="56dp"
        rsb:dsb_indicatorColor="#69BE28"
        rsb:dsb_progressColor="#69BE28"
        rsb:dsb_rippleColor="#69BE28"
        rsb:dsb_thumbSize="24dp"
        rsb:dsb_trackHeight="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PCMAmplitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Amplitude"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/PCMAmplitudeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:text=".5  mA"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
             />

    </LinearLayout>

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/PCMAmplitudeSeekbar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="56dp"
        rsb:dsb_indicatorColor="#69BE28"
        rsb:dsb_progressColor="#69BE28"
        rsb:dsb_rippleColor="#69BE28"
        rsb:dsb_thumbSize="24dp"
        rsb:dsb_trackHeight="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PCMFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Frequency"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/PCMFrequencyDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:text="55  Hz"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
             />

    </LinearLayout>

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/PCMFrequencySeekbar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="56dp"
        rsb:dsb_indicatorColor="#69BE28"
        rsb:dsb_progressColor="#69BE28"
        rsb:dsb_rippleColor="#69BE28"
        rsb:dsb_thumbSize="24dp"
        rsb:dsb_trackHeight="4dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>